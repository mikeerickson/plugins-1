{
  "name": "np.plugins",
  "packageName": "noteplan-cli",
  "info": "noteplan plugin development toolbox",
  "version": "2.0.0",
  "build": "12",
  "description": "noteplan-cli",
  "repository": "https://github.com/NotePlan/plugins",
  "contributors": [
    {
      "name": "Eduard Metzger",
      "email": "info@noteplan.co",
      "url": "https://github.com/NotePlan"
    },
    {
      "name": "Jonathan Clark",
      "url": "https://github.com/jgclark"
    },
    {
      "name": "David Wertheimer",
      "url": "https://github.com/dwertheimer"
    },
    {
      "name": "Mike Erickson",
      "email": "codedungeon@gmail.com",
      "url": "https://github.com/mikeerickson"
    }
  ],
  "main": "index.js",
  "bin": {
    "noteplan-cli": "index.js"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "keywords": [
    "noteplan",
    "plugins"
  ],
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.2",
    "@babel/eslint-parser": "^7.14.3",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-flow": "^7.13.13",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "concurrently": "^6.2.0",
    "documentation": "^13.2.5",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.23.2",
    "flow-bin": "^0.151.0",
    "inquirer": "^8.1.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.3.0",
    "rollup": "^2.48.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-input": "^1.0.1"
  },
  "scripts": {
    "init": "npm install && npm link",
    "autowatch": "node scripts/rollup.js",
    "autowatch:compact": "node scripts/rollup.js --compact",
    "release": "node scripts/releases.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier -w ./**/*.js ./**/**/*.js ./**/**/**/*.js",
    "typecheck": "flow check",
    "fix": "npm run lint-fix && npm run format",
    "test": "npm run lint && npm run typecheck",
    "docs": "documentation build '*.js' -f md -o README-helperFunctions.md"
  },
  "prettier": {
    "printWidth": 120,
    "parser": "flow",
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@codedungeon/gunner": "0.63.0",
    "commander": "^8.1.0",
    "enquirer": "^2.3.6",
    "findup-sync": "4.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.0",
    "strftime": "0.10.0",
    "toml": "^3.0.0"
  }
}
